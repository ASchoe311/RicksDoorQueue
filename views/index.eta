<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <title>Door Queue</title>
    </head>
    <body>
        <ul class="nav nav-tabs">
            <li class="nav-item"><a class="nav-link list-group-item list-group-item-action active" data-toggle="list" href="#modern" role="tab">"Modern" View</a></li>
            <li class="nav-item"><a class="nav-link list-group-item list-group-item-action" data-toggle="list" href="#table" role="tab">Table View</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="modern" role="tabpanel">
                <div class="container-fluid my-5">
                    <div class="row">
                        <% Object.keys(it.queueDict).forEach(function(day) { %>
                        <div class="col-lg py-3">
                            <h1 class="text-center text-capitalize"><%= day %></h1>
                            <% if (it.queueDict[day].length == 0) { %>
                            <li class="list-group-item"><h2 class="text-center">Empty!</h2></li>
                            <% } else { %>
                            <ol class="list-group text-center">
                                <% it.queueDict[day].forEach(function(person) { %>
                                <li class="list-group-item list-group-item-action"><%= person %></li>
                                <% }) %>
                            </ol>
                            <% } %>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="table" role="tabpanel">
                <% var maxDepth = 1 %>
                <div class="container-fluid table-responsive my-5 mx-1">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">#</th>
                                <% Object.keys(it.queueDict).forEach(function(day) { %>
                                <th scope="col" class="text-capitalize text-center"><%= day %></th>
                                <% if(it.queueDict[day].length > maxDepth){ maxDepth = it.queueDict[day].length } %>
                                <% }) %>
                            </tr>
                        </thead>
                        <tbody>
                        <% for(var i=0; i < maxDepth; i++){ %>
                            <tr>
                            <th scope="row" class="align-middle"><%= i+1 %></th>
                            <% Object.keys(it.queueDict).forEach(function(day) { %>
                                <% if(it.queueDict[day].length > i) { %>
                                    <td class="text-center"><%= it.queueDict[day][i] %></td>
                                <% } else { %>
                                    <td class="text-center">Available</td>
                                <% } %>
                            <% }) %>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Code by w3codegenerator.com -->
        <div class="card mx-5 text-center">
            <h4 class="card-header">Add yourself to the queue:</h4>
            <div class="card-body">
                <form class="form-inline"  method="POST" action="/manualqueue" enctype="application/json" target="_self">
                <fieldset class="form-group mx-auto">
                   <label for="name" class="mr-2 card-text">Name:</label><br>
                   <input type="text" id="name" name="name" class="mr-5"><br>
                   <label for="day-selector" class="mr-2 card-text">Select desired days:</label>
                       <select multiple class="form-control mr-5" id="day-selector" name="days">
                         <option value="sunday">Sunday</option>
                         <option value="monday">Monday</option>
                         <option value="tuesday">Tuesday</option>
                         <option value="wednesday">Wednesday</option>
                         <option value="thursday">Thursday</option>
                         <option value="friday">Friday</option>
                         <option value="saturday">Saturday</option>
                       </select>
                   <input type="submit" value="Queue Me!"><br><br>
                </fieldset>
                </form>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>